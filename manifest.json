{
  "manifest_version": 2,

  "name": "Twitter Notifier",
  "description":"Allows you to get desktop notifications from Twitter",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Click Here!"
  },
  
  "icons":{
      "64": "icon.png",
      "32": "icon.png",
      "16": "icon.png",
      "128": "icon.png"
    },

  "background":{
    "page":"background.html"   
  },

  "permissions":[
    "notifications",
    "https://twitter.com/i/notifications"
  ]
}
